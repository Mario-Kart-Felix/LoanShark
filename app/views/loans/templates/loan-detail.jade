.loan(class="#{reconciled ? 'reconciled' : ''}")
  h3
    = item_name
    span.value= " ($" + value + ")"

  h5 Days Past Due: 
    span.daysPastDue

  .person

  .actions
    if reconciled
      button.unreconcile(href='#') Unreconcile
    else
      button.destroy(href='#') Remove
      button.reconcile(href="#") Reconcile
      a.edit(href=jade.helpers.url('edit_loan', {id: id})) Edit